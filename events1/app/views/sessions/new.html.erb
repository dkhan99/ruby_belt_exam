<div class="row">
	<h1>Welcome</h1>
	<div class="col-md-6">
		<h3>Register</h3>
		<form action="/users" method="post">
			<div>
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
				 
				<div>
					<label>First Name:<input type="text" name="user[first_name]"></label>
				</div>

				<div>
					<label>Last Name:<input type="text" name="user[last_name]"></label>
				</div>

				<div>
					<label>Email:<input type="text" name="user[email]"></label>
				</div>

				<div>
					<label>City:<input type="text" name="user[city]"></label>
				</div>

				<div>
					<label>State:
						<select name="user[state]">
							<% @states.each do |state| %>
								<option value="<%= state.id %>"><%= state.name %></option>
							<% end %>
							
						</select>
					</label>
				</div>
				
				<div>
					<label>Password:<input type="password" name="user[password]"></label>
				</div>

				<div>
					<label>Confirm Password:<input type="password" name="user[password_confirmation]"></label>
				</div>

				<div>
					<input type="submit" value="Register">
				</div>
			
			
				
			</div>
			
		</form>
	</div>
	
	<div class="col-md-6">
		<h3>Login</h3>
		<form action="/sessions" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
			<div>
				<label>Email: <input type="email" name="login[email]"></label>
			</div>
			<div>
				<label>Password: <input type="password" name="login[password]"></label>
			</div>
			<div>
				<input type="submit" value="Login">		
			</div>
		</form>
		
	</div>
</div>